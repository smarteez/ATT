@inherits SqlBase
@rendermode InteractiveServer
@page "/sqllite"

<PageTitle>SQLLite</PageTitle>
<h1>SQLLITE</h1>
<hr />
<table style="width: 100%;">


    <tbody>
        <tr>
            <td><h4>Data Computation</h4></td>
            <td><h4>Saving Data</h4></td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-primary" disabled="@isDisabledStart" @onclick="StartButton">Start</button><br /><br />
                @if (display != null)
                {
                    <label>Total Count: @display.TotalCount</label>

                    <br />
                    <label>Old Count: @display.OldCount</label>

                    <br />
                    <label>Event Count: @display.EventCount</label>
                }


            </td>
            <td>
                <button class="btn btn-primary" disabled="@isDisabledSave" @onclick="SaveButton">Save</button>
                <table>
                    <tbody>
                        <tr>
                            <td><button class="btn btn-primary" disabled="@isDisabledXML" @onclick="XMLButton">Download XML</button></td>
                            <td><button class="btn btn-primary" disabled="@isDisabledBinary" @onclick="BinaryButton">Download Binary</button></td>
                        </tr>
                    </tbody>
                </table>

            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
    </tbody>
</table>